працює = так
значення = пусто

поки працює
  якщо значення є пусто
    значення1 = число(читати("перше значення = "))
    значення2 = число(читати("друге значення = "))
    операція = читати("операція: ")
  інакше
    значення1 = значення
    значення2 = число(читати("наступне значення = "))
    операція = читати("операція: ")
  кінець

  словник_операцій = (
    "+"=(а, б): а + б,
    "-"=(а, б): а - б,
    "*"=(а, б): а * б,
    "/"=(а, б): а / б
  )

  якщо словник_операцій містить операція
    значення = словник_операцій[операція](значення1, значення2)
    друк("результат: %(значення)")
  інакше
    друк("Невідома операція!")
  кінець
кінець